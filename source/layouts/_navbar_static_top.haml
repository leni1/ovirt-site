-# This is a plain, static bootstrap navbar written in haml.
-# By default it is inverted and goes on the top of the page.
.navbar.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle( type="button" data-toggle="collapse" data-target=".navbar-collapse" )
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand( href="/" title="Home" ) Home
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li
          %a( href="/blog/" ) Blog
        %li
          %a( href="/documentation/" ) Documentation
        %li.dropdown
          %a.dropdown-toggle( href="#help" title="help" data-toggle="dropdown" )
            Help
            %b.caret
          %ul.dropdown-menu
            %li
              %a( href="http://middlemanapp.com/" ) Middleman
            %li
              %a( href="http://getbootstrap.com" ) Bootstrap
            %li
              %a( href="http://haml.info/" ) Haml
